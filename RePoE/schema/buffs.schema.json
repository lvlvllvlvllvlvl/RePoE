            "additionalProperties": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/Source"
                }
            },
            "propertyNames": {
                "enum": [
                    "BlightTowerAuras",
                    "BlightedSporeAuras",
                    "CorpseTypeTags",
                    "ExplodingStormBuffs",
                    "Flasks",
                    "LabyrinthSecretEffects",
                    "LabyrinthTrinkets",
                    "Mods",
                    "PassiveSkills",
                    "PlayerConditions",
                    "RitualRuneTypes",
                    "UltimatumModifiers"
                ]
            },
            "required": [],
            "title": "Sources"
        },
        "Source": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "item": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "template": {
                    "type": "string"
                },
                "stat_text": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "stats": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                }
            },
            "title": "Source"
        },
        "Template": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "aura_radius_metres": {
                    "type": "number"
                },
                "stats": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                },
                "stat_text": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "visuals": {
                    "type": "string"
                }
            },
            "required": [],
            "title": "Template"
        },
        "Category": {
            "type": "string",
            "enum": [
                "Debuff",
                "Charge",
                "Buff",
                "Active skill",
                "Aspect",
                "PVP team",
                "Link",
                "PVP flag",
                "Mark",
                "Hex",
                "Stolen",
                "Flask",
                "Labyrinth trap",
                "Herald",
                "Buff shrine",
                "Spell shrine",
                "Tincture"
