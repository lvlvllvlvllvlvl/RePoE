{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "additionalProperties": {
        "$ref": "#/definitions/BuffsSchemaValue"
    },
    "definitions": {
        "BuffsSchemaValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "invisible": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "removable": {
                    "type": "boolean"
                },
                "stats": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "visuals": {
                    "type": "string"
                },
                "category": {
                    "$ref": "#/definitions/Category"
                },
                "sources": {
                    "$ref": "#/definitions/Sources"
                },
                "templates": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Template"
                    }
                },
                "stack_limit": {
                    "type": "integer"
                }
            },
            "required": [
                "description",
                "invisible",
                "name",
                "removable",
                "stats",
                "visuals"
            ],
            "title": "Buffs"
        },
        "Sources": {
